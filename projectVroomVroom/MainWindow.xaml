<Window x:Class="projectVroomVroom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectVroomVroom"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Grid Background="#FF00AF00">
        <Button Content="Start" HorizontalAlignment="Center" Margin="0,650,0,0" VerticalAlignment="Top" Height="100" Width="250" FontSize="32" Click="StartButtonClick"/>
        <Label Content="Sammy Racing" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" Height="205" Width="1021" FontSize="72" FontFamily="{StaticResource Pacifico}"/>
        <Button Content="Settings" HorizontalAlignment="Center" Margin="0,500,0,0" VerticalAlignment="Top" Height="100" Width="250" FontSize="32" RenderTransformOrigin="-0.994,-2.35"/>

    </Grid>
</Window>
